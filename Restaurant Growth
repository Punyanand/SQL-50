WITH DailyTotals AS (
    SELECT
        visited_on,
        SUM(amount) AS daily_total
    FROM
        Customer
    GROUP BY
        visited_on
),
SevenDayWindow AS (
    SELECT
        visited_on,
        SUM(daily_total) OVER (
            ORDER BY visited_on
            ROWS BETWEEN 6 PRECEDING AND CURRENT ROW
        ) AS sum_amount,
        COUNT(daily_total) OVER (
            ORDER BY visited_on
            ROWS BETWEEN 6 PRECEDING AND CURRENT ROW
        ) AS day_count
    FROM
        DailyTotals
)
SELECT
    visited_on,
    sum_amount AS amount,
    ROUND(sum_amount * 1.0 / day_count, 2) AS average_amount
FROM
    SevenDayWindow
WHERE
    day_count = 7
ORDER BY
    visited_on;
